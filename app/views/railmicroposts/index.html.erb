<p id="notice"><%= notice %></p>

<h1>Listing Railmicroposts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @railmicroposts.each do |railmicropost| %>
      <tr>
        <td><%= railmicropost.content %></td>
        <td><%= railmicropost.user_id %></td>
        <td><%= link_to 'Show', railmicropost %></td>
        <td><%= link_to 'Edit', edit_railmicropost_path(railmicropost) %></td>
        <td><%= link_to 'Destroy', railmicropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

